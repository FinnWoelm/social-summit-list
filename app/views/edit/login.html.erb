<div id="show">
  
  <div class="area">
    <h1 class="text-center">
      <% if flash[:error].present? %>
        <%= flash[:error] %>
      <% else %>
        Please Log-In
      <% end %>
    </h1>
  </div>
  <div class="area text-center">
    <div class="row">
      <div class="col-md-6 col-md-push-3">
        <%= form_tag({action: "attempt_login", edit_code: params[:edit_code]}, method: "post") do %>
          
          <%#= hidden_field_tag :edit_code, params[:edit_code]
  %>
          <div class="form-group">
            <%= label_tag(:email, "Your e-mail address:") %>
            <%= text_field_tag(:email, "", {:class => "form-control"}) %>
          </div>
        <%= submit_tag("Log In", :class => "btn btn-default btn-lg") %>
    <% end %>
      </div>
    </div>

  </div>
  
  <%= link_to summits_path, :class => "back-link" do %>
    <div class="back-link area">
      <h1 class="text-center"><i class="fa fa-long-arrow-left"></i> Back to List</h1>
    </div>
  <% end %>
</div>